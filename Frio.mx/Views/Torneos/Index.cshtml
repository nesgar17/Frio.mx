@model IEnumerable<Frio.mx.Models.Torneo>

@{
    ViewBag.Title = "Torneos";
}

<br />
<h2>lista de Torneos</h2>
<br />
<p>
    @Html.ActionLink("Agregar", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroEquipos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroJornadas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroEquipos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroJornadas)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.Logo))
            {
                <img src="@Url.Content(item.Logo)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }

        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.TorneoId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.TorneoId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.TorneoId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
